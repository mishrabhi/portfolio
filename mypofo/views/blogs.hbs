<div class="container">
    <div class="nav-scroller py-1 mb-3 border-bottom">
        <nav class="nav nav-underline justify-content-between">
            <a class="nav-item nav-link link-body-emphasis active" href="/blogs">All</a>
            <a class="nav-item nav-link link-body-emphasis" href="/blogs?blogCategory=Javascript">Javascript</a>
            <a class="nav-item nav-link link-body-emphasis" href="/blogs?blogCategory=html">HTML</a>
            <a class="nav-item nav-link link-body-emphasis" href="/blogs?blogCategory=CSS">CSS</a>
            <a class="nav-item nav-link link-body-emphasis" href="/blogs?blogCategory=mongodb">MongoDB</a>
            <a class="nav-item nav-link link-body-emphasis" href="/blogs?blogCategory=node">Node</a>
            <a class="nav-item nav-link link-body-emphasis" href="/blogs?blogCategory=express">Express</a>
            <a class="nav-item nav-link link-body-emphasis" href="/blogs?blogCategory=bootstrap">Bootstrap</a>

        </nav>
    </div>
</div>

<main class="container">

    <div class="p-4 p-md-5 mb-4 rounded text-body-emphasis bg-body-secondary">
        <div class="col-lg-6 px-0">
            <h1 class="display-4 fst-italic">{{featuredBlog.name}}</h1>
            <p class="lead my-3">
                {{featuredBlog.shortDescription}}
            </p>
            <p class="lead mb-0">
                <a href="/blogs/{{featuredBlog.alias}}" class="text-body-emphasis fw-bold">Continue reading...</a>
            </p>
        </div>
    </div>

    <div class="row mb-2">
        {{#each blogs}}
        <div class="col-md-12">
            <div class="row g-0 border rounded overflow-hidden flex-md-row mb-4 shadow-sm h-md-250 position-relative">
                <div class="col p-4 d-flex flex-column position-static">
                    <strong class="d-inline-block mb-2 text-primary-emphasis">{{this.blogCategory}}</strong>
                    <h3 class="mb-0">{{this.name}}</h3>
                    <div class="mb-1 text-body-secondary">{{convertDate this.createdAt}}</div>
                    <p class="card-text mb-auto">
                        {{this.shortDescription}}
                    </p>
                    <a href="/blogs/{{this.alias}}" class="icon-link gap-1 icon-link-hover stretched-link">
                        Continue reading
                        <svg class="bi">
                            <use xlink:href="#chevron-right" />
                        </svg>
                    </a>
                </div>
                <div class="col-auto d-none d-lg-block">
                    <img src="/images/javascript.png" alt="" />
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</main>